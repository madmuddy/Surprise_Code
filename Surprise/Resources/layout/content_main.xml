<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:minWidth="25px"
    android:minHeight="25px">

    <TextView
        android:text="Error Permission Required!\n\nPlease Click on Allow Button to Give Permisison."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permissionWarning"
        android:layout_marginTop="0.7in"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0.1in"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false" />
    <Button
        android:text="Allow"
        android:layout_width="278.0dp"
        android:layout_height="52.0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1.55in"
        android:id="@+id/AllowButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/permissionWarning" />
    <TextView
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="500.5dp"
        android:layout_height="75.0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="60px"
        android:textColor="@android:color/white"
        android:background="@drawable/abc_btn_colored_material"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true" />

</RelativeLayout>
